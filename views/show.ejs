<style type="text/css">
body {
  background:rgba(0,0,0,.7);
}</style>
<header style="position:fixed;z-index:30000;width:100%;" >
  <div style="min-width:20%; right:0px; top:0px; position:absolute; background-color:white;">
  <img src="http://www.barcodes4.me/barcode/qr/code.png?value=http%3A%2F%2Fhl0.co%2Fmanage%2F<%= device %>%2F&ecclevel=0&size=10" style="width:80%;margin:10% 10% 10% 10%;clear:right;">
  <ul>
    <% names.forEach(function (n) { %>
      <li>@<%= n %></li>
    <% }); %>
  </ul>
  <img src="http://i.imgur.com/zfrOyLj.jpg" style="margin-top:10%;margin-right:10%;">
  </div>
</header>



<div class="am-slider am-slider-default" data-slider-config="{&quot;directionNav&quot;:false,&quot;slideshowSpeed&quot;:5000}" style="max-width:80%;">
  <ul class="am-slides">
	  <% pics.forEach(function(p){ %>
	  <li>
	    <div style="height:97%;">
	    	<img src="<%= p.src %>" style="max-height:100%;">
	    </div>
	    <div class="am-slider-desc"><%= p.text %></div>
	    </li>
	  <% }) %>
  </ul>
</div>

<script src="https://cdn.socket.io/socket.io-1.0.6.js"></script>

<script>
  var socket = io();
  socket.on('binded', function(id){
    if ('<%= device %>' == id) {
      setTimeout(function (){
       location.reload();
      },3000)
    }
  });
  socket.emit('morning','<%= device %>');
</script>
<script src="http://libs.baidu.com/zepto/1.1.3/zepto.min.js"></script>
<script>window.Zepto || document.write('<script src="assets/js/zepto.min.js?1.1.3"><\/script>')</script>
<script src="/assets/js/amui.js"></script>
<script src="http://cdn.staticfile.org/handlebars.js/1.3.0/handlebars.min.js
"></script>
<script src="/assets/js/amui.widget.helper.js"></script>
</body>
</html>